<%=form_for @message, :url => url_for(:controller => 'conversations', :action => 'create'), html: {role: "form"} do |f|%>
  <%if @message.errors.any? %>
    <div>
      <h2><%=pluralize(@message.errors.count, "error")%> kept this message from being saved. </h2>
        <ul>
          <%@message.errors.full_messages.each do |error|%>
           <li><%=error%></li>
          <%end%>
        </ul>
      </div>
    <%end%>
    <div class="form-group">
      <br>
      <div class="row">
        <div class="col-lg-12">
          <%=f.label :body %>
          <%=f.text_field :body, class: 'form-control' %>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-12">
          <%=f.submit "Send", class: "btn-block" %>
        </div>
      </div>
    </div>
<%end%>
