<div class="row">
  <div class="col-lg-4">
    <h2>DBC Pair Board</h2>

    <div id='offer-to-mentor'>
      <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal" name='Offer To Mentor'>Offer To Mentor</button>
    </div>
  </div>
  <div class="col-lg-8 flash_area">

  </div>
</div>

<!-- Offer To Mentor Modal -->
<div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog modal-lg">

    <!-- Offer To Mentor Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">New Offering</h4>
      </div>
      <div class="modal-body">
        <%= render 'form' %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>

  </div>
</div>
</div>
<br>
<br>


<div class="container">
  <h3>Get Yourself Some Knowledge</h3>

  <% @users.each do |user| %>
  <div class="row">
    <ul class='nav nav-pills'>
      <% if user.open_offerings.length > 0 || user.mentor_appointments.length > 0 %>
        <li><button name='<%= user.id %>' type='button' class='btn btn-default name_button'><%= user.name %></button></li>
        <% Offering::AVAILABLE_OFFERING_TIMES.each do |time| %>
          <% if user.is_booked?(time) %>
            <li><a class="taken_offering_link" value="<%= time %>" href='#'><%= time %></a></li>
          <% elsif user.is_offering?(time) %>
            <li><a class="open_offering_link" value="<%= time %>" href='#'><%= time %></a></li>
          <% else %>
            <li class="not_available"><%= time %></li>
          <% end %>
        <% end %>
      <% end %>
    </ul>
  </div>
    <br>
  <% end %>


  <!-- Make Appointment Model -->
  <div id="appointmentModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

      <!-- Offer To Mentor Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Book An Appointment</h4>
        </div>
        <div class="modal-body">
          <h1 class="mentorName">Mentor Name: </h1>
          <h2 class="mentorTime">Time: <h2>
          <button type="button" class="btn btn-info btn-lg" name='bookAppointment'>Book Appointment</button>
        </div>
        <div class="modal-footer">

          <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        </div>
      </div>

    </div>
  </div>

  <!-- Make Appointment Model -->
  <div id="showAppointmentModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

      <!-- Offer To Mentor Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Book An Appointment</h4>
        </div>
        <div class="modal-body">
          <h1 class="ShowModalMentorName">Mentor Name: </h1>
          <h2 class="mentorTime">Time: <h2>
          <button type="button" class="btn btn-info btn-lg" name='bookAppointment'>Cancel Appointment</button>
        </div>
        <div class="modal-footer">

          <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        </div>
      </div>

    </div>
  </div>




</div>


