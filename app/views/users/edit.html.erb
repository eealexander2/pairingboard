<div class="col-lg-4"></div>
<div class="col-lg-4">
  <h1>Edit Your Profile!</h1>

  <%= form_for @user, html: {role: "form"} do |f| %>
    <%if @user.errors.any? %>
      <div>
        <h2><%=pluralize(@user.errors.count, "error")%> kept this user from being saved. </h2>
          <ul>
            <%@user.errors.full_messages.each do |error|%>
             <li><%=error%></li>
            <%end%>
          </ul>
        </div>
      <%end%>
      <div class="form-group">
        <div class="row">
          <div class="col-lg-12">
            <%=f.label :name%>
            <%=f.text_field :name, class: "form-control" %>
          </div>
        </div>
        <br>
        <div class="row">
          <div class="col-lg-12">
            <%=f.label :phone_number%>
            <%=f.text_field :phone_number, class: "form-control" %>
          </div>
        </div>
        <br>
        <div class="row">
          <div class="col-lg-12">
            <%= f.label :current_phase %>
            <%= f.select :current_phase, options_for_select([ ['1', 1], ['2', 2], ['3', 3], ['4', 4] ]), class: "form-control" %>
          </div>
        </div>
        <br>
        <div class="row">
          <div class="col-lg-12">
            <%= f.label :description, "I'd like to mentor on these topics:" %>
            <%= f.text_area :description, class: "form-control" %>
          </div>
        </div>
      </div>
        <div class="col-lg-12">
          <%= f.submit "Update Your Profile", class: "btn-block" %>
        </div>
      </div>
  <%end%>
</div>
<div class="col-lg-4"></div>
